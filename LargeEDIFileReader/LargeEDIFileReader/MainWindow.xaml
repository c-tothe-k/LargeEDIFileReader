<Window x:Class="LargeEDIFileReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LargeEDIFileReader"
        mc:Ignorable="d"
        Title="Large EDI File Reader" Height="768" Width="1024">
    <StackPanel>
        <TextBlock Text="No File Open" FontSize="14" Margin="23,5,0,0"></TextBlock>
        <StackPanel Orientation="Horizontal">
            <Button Content="Open File..." HorizontalAlignment="Left" Margin="23,15,0,15" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            <TextBox Name="SearchTerm" Margin="45,0,10,0" Height="35" Width="200"/>
        </StackPanel>
    </StackPanel>
</Window>
